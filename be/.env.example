# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=language_learning
DB_USER=your_username
DB_PASS=your_password

# JWT Secrets
ACCESS_TOKEN_SECRET=your_access_token_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:8080

# Cookie Configuration (untuk production)
# Set domain yang sama untuk frontend dan backend
# Contoh: jika frontend di subdomain1.example.com dan backend di subdomain2.example.com
# maka set COOKIE_DOMAIN=.example.com
COOKIE_DOMAIN=

# Production example:
# COOKIE_DOMAIN=.your-domain.com
# CORS_ORIGIN=https://your-frontend-url.appspot.com
